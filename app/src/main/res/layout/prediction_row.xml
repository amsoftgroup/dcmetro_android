<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:id="@+id/table"
	android:layout_height="fill_parent" android:padding="6dip" android:stretchColumns="0,1,2">

	<ImageView android:id="@+id/icon1" android:layout_width="0px" 
		android:layout_height="wrap_content" android:layout_weight="1" 
		android:layout_marginRight="6dip" android:gravity="center_horizontal|center_vertical" />

	<TextView android:id="@+id/destination" android:layout_width="0px" 
		android:layout_height="wrap_content" android:layout_weight="1"
		android:gravity="center_horizontal|center_vertical" android:textSize="15px"
		android:textStyle="normal" android:typeface="serif" />

	<TextView android:id="@+id/minutes" android:layout_width="0px" 
		android:layout_height="wrap_content" android:layout_weight="1"
		android:gravity="center_horizontal|center_vertical" android:textSize="15px"
		android:textStyle="normal" android:typeface="serif" />
	
</LinearLayout>


  
